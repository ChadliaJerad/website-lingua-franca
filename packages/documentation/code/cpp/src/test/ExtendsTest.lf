target Cpp {
    timeout: 1s,
    fast: true
}

import Count from "../Count.lf";
import TestCount from "../TestCount.lf";

reactor A {
    input a:int;
    output out:int;
    reaction(a) -> out {=
        out.set(*a.get());
    =}
}

reactor B extends A {
    input b:int;
    reaction(a, b) -> out {=
        out.set(*a.get() + *b.get());
    =}
}

main reactor {
    c = new Count();
    b = new B();
    t = new TestCount(start = 0, stride = 2, num_inputs = 11);
    (c.y)+ -> b.a, b.b;
    b.out -> t.x;
}
