target C;

reactor Count {
    output out:int;
    state c:int(0);
    timer t(0, 1 sec);
    reaction(t) -> out {=
        lf_set(out, self->c++);
    =}
}
reactor Print {
    input in:int;
    reaction(in) {=
        lf_print("***** Received: %d", in->value);
    =}
}

federated reactor {
    c = new Count();
    p = new Print();
    c.out -> p.in;
}
 