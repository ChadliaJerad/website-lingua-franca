 target C {
    timeout: 0 msec
}

 reactor Source {
     output out:string;
     reaction(startup) -> out {=
         lf_set(out, "Hello World!");
     =}
 }
 reactor Destination {
     input in:string;
     reaction(in) {=
         lf_print("Received: %s", in->value);
     =}
 }
 
 federated reactor Federated {
     s = new Source();
     d = new Destination();
     s.out -> d.in;
 }
 